{
  "name": "maintenance-tr-client",
  "version": "1.0.0",
  "description": "Maintenance tracker client",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage -u",
    "dev": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/Client/tests/testSetup.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "modulePaths": [
      "src"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 30,
        "lines": 50,
        "statements": 50
      }
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klevamane/Maintenance-tr-client.git"
  },
  "keywords": [
    "React",
    "Redux"
  ],
  "author": "Onengiye Richard",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/klevamane/Maintenance-tr-client/issues"
  },
  "homepage": "https://github.com/klevamane/Maintenance-tr-client#readme",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cors": "^2.8.4",
    "css-loader": "^1.0.0",
    "dotenv": "^6.0.0",
    "eslint": "^5.6.1",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jest": "^23.6.0",
    "redux-devtools-extension": "^2.13.5",
    "sinon": "^6.3.4",
    "webpack-dev-server": "^3.1.5"
  }
}
